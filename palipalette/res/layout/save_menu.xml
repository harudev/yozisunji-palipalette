<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/save_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="122dp"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Save SVG"
        android:textColor="@color/pali"
        android:textSize="45sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/storage/PaliPalette/"
        android:textColor="@color/pali"
        android:layout_gravity="right"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="________________________________________" />

    <EditText
        android:id="@+id/save_editText"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/save_okBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:onClick="OnClick"
            android:text="OK" />

        <Button
            android:id="@+id/save_cancelBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:onClick="OnClick"
            android:text="Cancel" />

    </LinearLayout>

</LinearLayout>
